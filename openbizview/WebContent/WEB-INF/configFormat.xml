<?xml version="1.0" encoding="UTF-8"?>
<jlic-web-app>
<!-- Formato de fecha. Para java :dd/MM/yyyy formato de mes en números, dd/MMM/yyyy formato de mes en letras-->
  <load>
    <load-character-encoding>dd/MM/yyyy</load-character-encoding>
  </load>
  
<!-- Número de hilos a utilizar de 1 a 100-->
   <thread>
    <load-thread-pool>100</load-thread-pool>
  </thread>
  
<!-- Definición para jndi, si utiliza tomcat coloque java:/comp/env/ mas su definición de jndi por ejemplo java:/comp/env/jdbc/opennomina-->
   <load-jndi>   
    <load-jndi-bd>java:comp/env/jdbc/orabiz</load-jndi-bd>
    <!-- Definición para jndi mail-->
    <load-jndi-mail>java:comp/env/mail/recibos</load-jndi-mail>
  </load-jndi> 
         
</jlic-web-app>